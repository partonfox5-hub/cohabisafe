            <!-- Desktop Nav -->
            <nav class="main-nav">
                <ul class="nav-list">
                    <li><a href="/">Home</a></li>
                    <li><a href="#benefits">Benefits</a></li>
                    <li><a href="#ui-preview">Platform</a></li>
                </ul>
            </nav>

            <div class="nav-actions">
                <a href="/dashboard" class="btn-account">
                    <i class="fas fa-user-circle"></i> My Account
                </a>
                <!-- Hamburger Trigger -->
                <button class="hamburger-btn" onclick="toggleMobileMenu()">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile Menu Drawer -->
    <div class="mobile-menu-overlay" id="mobileOverlay" onclick="toggleMobileMenu()"></div>
    <div class="mobile-menu" id="mobileMenu">
        <button class="close-btn" onclick="toggleMobileMenu()">&times;</button>
        <ul class="mobile-nav-list">
            <li><a href="/">Home</a></li>
            <li><a href="#benefits">Benefits</a></li>
            <li><a href="#ui-preview">Platform</a></li>
            <li><a href="/landlord-start">Landlords</a></li>
            <li><a href="/dashboard">My Account</a></li>
        </ul>
